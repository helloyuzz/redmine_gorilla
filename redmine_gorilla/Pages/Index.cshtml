@page
@model com.redmine.gorilla.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";

}
<style>
    .thumbnail1 {
        opacity: 0.8;
        border-radius: 13px;
        padding-top: 26px;
        width: 165px;
    }
</style>
<label for="openSidebarMenu" class="sidebarIconToggle">
</label>
<input type="checkbox" class="openSidebarMenu" id="openSidebarMenu" style="display:none;">
<div id="sidebarMenu">
    <ul class="sidebarMenuInner">
        <li class="text-dark">Choose themes<br /><a href="##" class="text-dark">恢复默认</a></li>
        @{
            for (int imgFile = 1; imgFile <= 18; imgFile++) {
                string imgPath = "/images/" + imgFile + ".jpg";
                <li><a href="#Link"><img src="@imgPath" style="width:205px;" onclick="changeTheme('@imgPath');" /></a></li>
            }
        }
    </ul>
</div>
<div class="text-center">
    <h1 class="display-4 text-shadow" style="font-family:'Microsoft YaHei'">产品协作管理平台</h1>
    <p class="text-white">更多信息请访问 <a href="http://redmine.logichealth.cn" class="text-white">http://redmine.logichealth.cn</a>.</p>
    <br />
    <div class="row" style="background:none;">
        <div class="col-sm-3 col-md-2">
            <a class="btn btn-lg btn-primary text-center thumbnail1" asp-area="" asp-page="/Progresses/Index">
                <i class="fa fa-skiing fa-4x"></i>
                <div class="caption">
                    <h4>研发计划</h4>
                </div>
            </a>
        </div>
        <div class="col-sm-6 col-md-2">
            <a class="btn btn-lg btn-light text-center thumbnail1" asp-area="" asp-page="/Projects/Index">
                <i class="fa fa-hospital fa-4x" aria-hidden="true"></i>
                <h4>医院列表</h4>
            </a>
        </div>
        <div class="col-sm-6 col-md-2">
            <a class="btn btn-lg btn-danger text-center thumbnail1" href="@com.redmine.gorilla.Globals.GorillaURL" target="_blank">
                <i class="fa fa-compass fa-4x"></i>
                <div class="caption">
                    <h4>Redmine</h4>
                </div>
            </a>
        </div>
        <div class="col-sm-6 col-md-2">
            <a class="btn btn-lg btn-primary text-center thumbnail1" href="#Link" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fa fa-file-alt fa-4x"></i>
                <div class="caption">
                    <h4>线上问题&nbsp;<span class="caret"></span></h4>
                </div>
            </a>
            <ul class="dropdown-menu pull-right">
                <li><a href="@com.redmine.gorilla.Globals.NewIssusURL" target="_blank"><i class="fa fa-plus-square"></i>&nbsp;登记用户Bug</a></li>
                @*<li><a href="#">Another action</a></li>
                <li><a href="#">Something else here</a></li>*@
                <li role="separator" class="divider"></li>
                <li><a href="#"><i class="fa fa-align-justify"></i>&nbsp;查看所有</a></li>
            </ul>
        </div>
        <div class="col-sm-6 col-md-2">
            <a class="btn btn-lg btn-primary text-center thumbnail1" asp-area="" asp-page="/Users/Index" asp-route-type="Employee">
                <i class="fa fa-users fa-4x"></i>
                <div class="caption">
                    <h4>员工列表</h4>
                </div>
            </a>
        </div>
        <div class="col-sm-6 col-md-2">
            <a class="btn btn-lg btn-success text-center thumbnail1" asp-area="" asp-page="/Accounts/Index">
                <i class="fa fa-cloud-download-alt fa-4x"></i>
                <div class="caption">
                    <h4>升级包提取</h4>
                </div>
            </a>
        </div>
        <div class="flex-grow-1" style="background:none;margin-top:33px;">
            <div class="col-sm-6 col-md-2">
                <a class="btn btn-lg btn-secondary text-center thumbnail1" asp-area="" asp-page="/Accounts/Index">
                    <i class="fa fa-file-alt fa-4x"></i>
                    <div class="caption">
                        <h4>日志审计</h4>
                    </div>
                </a>
            </div>
            <div class="col-sm-6 col-md-2">
                <a class="btn btn-lg btn-success text-center thumbnail1" href="#Themes" onclick="$('#openSidebarMenu').click();">
                    <i class="fa fa-paint-brush fa-4x"></i>
                    <div class="caption">
                        <h4>Themes</h4>
                    </div>
                </a>
            </div>
            <div class="col-sm-6 col-md-2">
                <a class="btn btn-lg btn-info text-center thumbnail1" asp-area="" asp-page="/Privacy">
                    <i class="fa fa-info-circle fa-4x"></i>
                    <div class="caption">
                        <h4>Privacy</h4>
                    </div>
                </a>
            </div>
            <div class="col-sm-6 col-md-2">
                <a class="btn btn-lg btn-warning text-center thumbnail1" asp-area="" asp-page="/Logout">
                    <i class="fa fa-arrow-right fa-4x"></i>
                    <div class="caption">
                        <h4>退出</h4>
                    </div>
                </a>
            </div>
            <div class="col-sm-6 col-md-2">
            </div>
            @*<div class="col-sm-6 col-md-2">
            <a class="btn btn-lg btn-success" href="#">
                <i class="fa fa-flag fa-2x pull-left"></i> Font Awesome<br>Version 4.7.0
            </a>
        </div>*@
        </div>
    </div>
</div>
<iframe id="ChangeShowPanelIframe" name="ChangeShowPanelIframe" style="display:none;"></iframe>
<script>
    $('#sidebarMenu').css("display", "block");
</script>